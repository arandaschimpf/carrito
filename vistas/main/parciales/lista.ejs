<div class='table-responsive'>
	<div class="nav text-center">
		<ul class="pagination">
			<% for (var i = 0; i < Math.ceil(size/10); i++) { %>
				<li onclick="window.scope.cambiarPag(<%= i %>);"><a href="#"><%= i+1 %></a></li>
			<% } %>
			<li title="Recargar"><a href="#" onclick="window.scope.recargar();"><span class="glyphicon glyphicon-refresh" aria-hidden="true"></span></a></li>
			<li title="Eliminar completados"><a href="#" onclick="window.scope.eliminarCompletados();"><span class="glyphicon glyphicon-remove-circle" aria-hidden="true"></span></a></li>
		</ul>
		
	</div>
	<form class="agregar" onsubmit="window.scope.agregar();">
		<div class="input-group">
			<input type="text" name="name" id="inputName" class="form-control" placeholder="Agregar">
			<div class="input-group-btn">
				<button class="btn btn-success agregar" type="submit">
					<span class="glyphicon glyphicon-plus" aria-hidden="true"></span>				
				</button>
			</div>
		</div>		
	</form>
	<table class='table table-striped'>
		<thead>
			<tr>
				<th>Producto</th>
				<th class="text-right">Opciones</th>
			</tr>
		</thead>
		<tbody>
			<% _.each(lista, function(element, index, lis){ %>
				<% print(tmpP({element: element, user: user, index: index})); %>
			<% }); %>
		</tbody>
	</table>
</div>